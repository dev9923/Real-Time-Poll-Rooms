// This is a schema.prisma file

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id     Int      @id @default(autoincrement())
  title  String   
  options Option[]
  votes   Vote[]
}

model Option {
  id     Int    @id @default(autoincrement())
  text   String 
  pollId Int
  poll   Poll   @relation(fields: [pollId], references: [id])
}

model Vote {
  id       Int    @id @default(autoincrement())
  optionId Int
  option   Option @relation(fields: [optionId], references: [id])
  pollId   Int
  poll     Poll   @relation(fields: [pollId], references: [id])
  voter    String
}