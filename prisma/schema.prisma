// This is a schema.prisma file

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  options   Option[]
  votes     Vote[]
}

model Option {
  id        Int      @id @default(autoincrement())
  text      String
  pollId    Int
  poll      Poll     @relation(fields: [pollId], references: [id])
  votes     Vote[]
}

model Vote {
  id        Int      @id @default(autoincrement())
  optionId  Int
  option    Option   @relation(fields: [optionId], references: [id])
  pollId    Int
  poll      Poll     @relation(fields: [pollId], references: [id])
  voterIp   String?  // for IP-based anti-abuse
  voterId   String?  // for cookie/localstorage-based ID
  createdAt DateTime @default(now())
}